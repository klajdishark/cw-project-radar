header.header
    .header--top
        //- Cyberwatchng logo
        .logo
            a(href='https://www.cyberwatching.eu/')
                img(src="/img/cyberwatching-logo.png", alt="Cyberwatching logo")
        //- radar title - immutable
        .title
            a(href='/')
                span Cyberwatching Project Radar
        //- user account menu - shown only if user is logged in
        .user--menu
            if user
                a.nav__el.nav__el--logout Log out
                a.nav__el(href='/user/account')
                    img(alt=`${user.name}`, src="data:image/svg+xml;base64,")
            else
                a.nav__el(href='/user/login') Log in
    .header--menu
        .menubar
            .menu-item: button.radar(radar='') Live radar
            .menu-item
                button Editions
                if (editions)
                    .div(style="position: relative; top: 2px;")
                        .sub-menu
                            each e in editions
                                .menu-item: button.radar(radar=`${e.slug}`) #{e.name}
            - if (user && user.role === 'admin')
                .menu-item
                    button Admin
                    .div(style="position: relative; top: 2px;")
                        .sub-menu
                            .menu-item: button.admin(route='/admin/user') Manage users
                            .menu-item: button.admin(route='/admin/radar') Manage radars
                            .menu-item: button.admin(route='/admin/project') Manage projects

            .menu-right
                .menu-item
                    button.disclaimer(route='/disclaimer') Disclaimer
                .menu-item
                    button.documentation(route='/documentation') Documentation

